@model Blog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Category
                        </p>
                        <form asp-controller="Blog" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Title</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Title">
                                <span class="text-danger my-1" asp-validation-for="Title"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Intro</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Description">
                                <span class="text-danger my-1" asp-validation-for="Description"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Quote</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Description2">
                                <span class="text-danger my-1" asp-validation-for="Description2"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Context</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Description3">
                                <span class="text-danger my-1" asp-validation-for="Description3"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="form-group">
                                    <input class="form-control" value="@User.Identity.Name" asp-for="Admin" type="hidden">
                                    <span class="text-danger" asp-validation-for="Admin"></span>
                                </div>
                            }
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Blog" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}


