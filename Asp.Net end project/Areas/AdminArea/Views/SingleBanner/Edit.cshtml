@model SingleBanner

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <img style="width:200px; height:150px; border-radius:10%" src="~/assets/img/banner/@Model.Image" alt="slider" />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group my-1">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <a class="btn btn-primary" asp-controller="SingleBanner" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
}