@model Banner

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Title</label>
            <textarea class="form-control" id="title" asp-for="Title"></textarea>
            <span class="text-danger my-1" asp-validation-for="Title"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Description</label>
            <textarea class="form-control" id="description" asp-for="SubTitle"></textarea>
            <span class="text-danger my-1" asp-validation-for="SubTitle"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Banner" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <script src="~/assets/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("header");
        CKEDITOR.replace("title");
        CKEDITOR.replace("description");
    </script>
}